@page "/"

<PageTitle>Home</PageTitle>

<div class="center-div">
    <div class="max-w-7xl mx-auto">
        <h1 class="text-center font-semibold text-8xl text-welcome">Welcome to the <br/> 
            <span class="text-orange-400">
                Solar-Powered Charging Station!
            </span>
        </h1>
    </div>
    <div class="mt-10">
        <button @onclick="StartCharging" type="button" class="text-white bg-gradient-to-r from-blue-500 via-blue-600 to-blue-700 hover:bg-gradient-to-br focus:ring-4 focus:outline-none focus:ring-blue-300 shadow-lg shadow-blue-500/50 font-medium rounded-lg text-5xl px-10 py-5 text-center me-2 mb-2 ">
            Start Charging
        </button>
    </div>
</div>

@code {

    private void StartCharging()
    {
        navigationManager.NavigateTo("/slots",true,true);
    }
}

