@using raspi.Components.Pages.Shared

<div class="position-fixed end-0 m-4 home-nav">
    <div @onclick="Navigate" class="home-button d-flex align-items-center justify-content-center">
        <svg width="800px" height="800px" viewBox="0 0 24 24" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path fill-rule="evenodd" clip-rule="evenodd" d="M4 5C3.44772 5 3 5.44772 3 6C3 6.55228 3.44772 7 4 7H20C20.5523 7 21 6.55228 21 6C21 5.44772 20.5523 5 20 5H4ZM7 12C7 11.4477 7.44772 11 8 11H20C20.5523 11 21 11.4477 21 12C21 12.5523 20.5523 13 20 13H8C7.44772 13 7 12.5523 7 12ZM13 18C13 17.4477 13.4477 17 14 17H20C20.5523 17 21 17.4477 21 18C21 18.5523 20.5523 19 20 19H14C13.4477 19 13 18.5523 13 18Z" fill="white"/>
        </svg>
    </div>
</div>

<style>
    .home-nav {
        z-index: 1000;
    }

    .home-button {
        width: 60px;
        height: 60px;
        background: linear-gradient(145deg, #0d6efd, #0a58ca);
        border-radius: 50%;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        cursor: pointer;
        transition: all 0.3s ease;
    }

    .home-button:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
    }

    .home-icon {
        fill: white;
    }
</style>

@code {

    private void Navigate()
    {
        navigationManager.NavigateTo("/inventory", true,true);
    }
}