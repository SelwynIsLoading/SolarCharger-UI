@page "/slots"
@using raspi.Components.Pages.Shared

<PageTitle>Charging Slots</PageTitle>

<div class="center-div">
    <h3 class="text-center font-bold text-8xl text-blue-700">Please select your charging slot:</h3>
    <p class="my-5 text-blue-500 font-semibold text-5xl">Phone Slots:</p>
    <div class="grid grid-cols-3 gap-5">
        @for (int i = 1; i <= 9; i++)
        {
            <Slot SlotNumber="@i"/>
        }
    </div>
    <p class="my-3 text-blue-500 font-semibold text-5xl mt-5">Laptop Slots:</p>
    <div class="grid grid-cols-2 gap-5 mt-4">
        @for (int i = 1; i <= 4; i++)
        {
            <LaptopSlot SlotNumber="@i"/>
        }
    </div>
</div>

