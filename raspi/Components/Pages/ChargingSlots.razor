@page "/slots"
@using raspi.Components.Pages.Shared

<PageTitle>Charging Slots</PageTitle>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-12 text-center mb-5">
            <h1 class="display-4 text-primary fw-bold">Please select your charging slot</h1>
        </div>
    </div>

    <div class="row mb-5">
        <div class="col-12">
            <h2 class="h3 text-primary mb-4">Phone Slots</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4">
                @for (int i = 1; i <= 9; i++)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-shadow">
                            <div class="card-body">
                                <Slot SlotNumber="@i"/>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <h2 class="h3 text-primary mb-4">Laptop Slots</h2>
            <div class="row row-cols-1 row-cols-md-2 g-4">
                @for (int i = 1; i <= 4; i++)
                {
                    <div class="col">
                        <div class="card h-100 shadow-sm hover-shadow">
                            <div class="card-body">
                                <LaptopSlot SlotNumber="@i"/>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .hover-shadow:hover {
        transform: translateY(-5px);
        box-shadow: 0 .5rem 1rem rgba(0,0,0,.15)!important;
        transition: all .3s ease;
    }
</style>

